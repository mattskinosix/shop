<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        app:srcCompat="@drawable/carovigno_castello_di_carovigno" />

    <Button
        android:id="@+id/scan_qrcode"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:backgroundTint="#FFFFFF"
        android:text="SCAN QR CODE"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/product_in_stock"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#43D34A"
            android:baselineAligned="false"
            android:text="Products in Stock"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/account_setting"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:baselineAligned="false"
            android:text="Account Settings"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/special_product"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D32F2F"
            android:text="Special Products"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/promotions"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#303F9F"
            android:text="Promotions"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>